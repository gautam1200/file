<form action="/createclass">
    <input type="hidden" name="id" value="<%= (editData) ? editData._id : "" %>">
    <input type="text" name="student_name" placeholder="Enter student Name" value="<%= (editData) ? editData.student_name : "" %>"><br><br>
    <input type="text" name="student_code" placeholder="Enter student Code" value="<%= (editData) ? editData.student_code : "" %>"><br><br>
    <input type="email" name="student_email" placeholder="Enter student Email" value="<%= (editData) ? editData.student_email : "" %>"><br><br>
    <input type="password" name="student_password" placeholder="Enter student Password" value="<%= (editData) ? editData.student_password : "" %>"><br><br>
    <button type="submit">submit</button>
</form>
<style>
    th{
        padding: 5px 10px;
        font-size: 20px;
    }
    td button{
        width: 100%;
    }
    button a{
        text-decoration: none;
    }
</style>
<table border="4">
    <tr>
        <th>id</th>
        <th>Student Name</th>
        <th>Student Code</th>
        <th>Student Email</th>
        <th>Student Password</th>
        <th>DELETE</th>
        <th>EDIT</th>
    </tr> 
    <% data.map((item , index) => { %>
        <tr>
            <td><%= index + 1 %></td>
            <td><%= item.student_name %></td>
            <td><%= item.student_code %></td>
            <td><%= item.student_email %></td>
            <td><%= item.student_password %></td>
            <td><button><a href="/deleteData/<%= item._id %>">DELETE</a></button></td>
            <td><button><a href="/updateData/<%= item._id %>">EDIT</a></button></td>
        </tr>
  <%  }) %>
</table>