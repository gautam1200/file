<form action="/createData">
    <input type="hidden" name="id" placeholder="Enter your id"  value="<%= (editData) ? editData._id : "" %>">
    <input type="text" name="name" placeholder="Enter Name" re value="<%= (editData) ? editData.name : "" %>" > <br><br>
    <input type="email" name="email" placeholder="Enter Email" value="<%= (editData) ? editData.email : "" %>" ><br><br>
    <input type="password" name="password" placeholder="Enter Password" value="<%= (editData) ? editData.password : "" %>" ><br><br>
    <input type="number" name="salary" placeholder="Enter Salary" value="<%= (editData) ? editData.salary : "" %>"> <br><br>
    <button type="submit">SUBMIT</button>
</form>

<table border="4">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Salary</th>
        <th>DELETE</th>
        <th>EDIT</th>
    </tr>
     <% data.map((item , index) => { %>
    <tr>
        <td><%= index + 1 %></td>
        <td><%= item.name %></td>
        <td><%= item.email %></td>
        <td><%= item.password %></td>
        <td><%= item.salary %></td>
        <td><button><a href="/deleteData/<%= item._id %>">DELETE</a></button></td>
        <td><button><a href="/updateData/<%= item._id %>">EDIT</a></button></td>
    </tr>
  <% }) %>
</table>