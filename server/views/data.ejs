<form action="/createData">
    <input type="text" name="name" placeholder="Name" id="" value="<%= (editData) ? editData.name : '' %>"><br><br>
    <input type="text" name="surname" placeholder="Surname" id="" value="<%= (editData) ? editData.surname : '' %>"><br><br>
    <input type="text" name="email" placeholder="E-mail" id="" value="<%= (editData) ? editData.surname : '' %>"><br><br>
    <input type="number" name="number" placeholder="Number" id="" value="<%= (editData) ? editData.number : '' %>"> <br><br>
    <button type="submit">Submit</button>
</form>

<table border="1">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Surname</td>
        <td>E-mail</td>
        <td>number</td>
        <td>DELETE</td>
        <td>UPDATE</td>
    </tr>
    <%
        storeData.map((item , index) => {
    %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= item.name %></td>
                <td><%= item.surname %></td>
                <td><%= item.email %></td>
                <td><%= item.number %></td>
            
                <td>
                    <button><a href="/deleteData/<%= index %>">DELETE</a></button>
                </td>
                <td>
                    <button><a href="/editData?editId=<%= index %>">UPDATE</a></button>
                </td>
            </tr>
    <%
        })
    %>
</table>


